
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>树组件</title>
    <link href="~/layuiadmin/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layuiadmin/layui/layui.js"></script>
    <style>
        html, body {
            height: 100%;
        }

        .fram-box, .fram-tree, .fram-content {
            height: 100%;
        }

        .fram-tree {
            width: 200px;
            float: left;
        }

        .fram-content {
            margin-left: 210px;
            background: #fff;
        }
        #frm{
            width:100%;
            height:100%;
            border:0;
            margin:0;
            padding:0;
        }
    </style>
</head>
<body>
    <div class="fram-box">
        <div class="fram-tree">
            <div id="test1"></div>
        </div>
        <div class="fram-content">
            <iframe id="frm" name="frm" ></iframe>
        </div>
    </div>

    <script>
        layui.use('tree', function () {
            var tree = layui.tree;
            var $ = layui.$;

            //渲染
            var inst1 = tree.render({
                elem: '#test1'  //绑定元素
                , isJump: true
                , data: [
                    {
                        title: '基础数据维护'
                        , children: [
                            { title: '全国城市列表', href :'/basedata/list/?type=1'},
                            { title: '科室列表', href : '/basedata/list/?type=2'},
                            { title: '医师等级', href : '/basedata/list?type=3'},
                        ]
                    }
                ]
                , click: function (obj) {
                    //console.log(obj.data); //得到当前点击的节点数据
                    //console.log(obj.checked); //得到当前节点的展开状态：open、close、normal
                    //console.log(obj.elem); //得到当前节点元素
                    $('.layui-tree-txt').attr("target", "frm");
                }
            });
        });
    </script>
</body>
</html>